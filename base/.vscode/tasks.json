{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: cl.exe 生成活动文件 (MSVC)",
            "command": "cl.exe",
            "args": [
                "/Zi",
                "/EHsc",
                "/nologo",
                "/std:c++17",
                "/I${workspaceFolder}/../vcpkg/installed/x64-windows/include",
                "/Fe${fileDirname}\\${fileBasenameNoExtension}.exe",
                "${file}",
                "/link",
                "/LIBPATH:${workspaceFolder}/../vcpkg/installed/x64-windows/lib"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$msvc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "使用 vcpkg 库编译当前文件"
        }
    ],
    "version": "2.0.0"
}